<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="442.0" prefWidth="400.0" spacing="30.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.moron.tictactoe.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label contentDisplay="BOTTOM" text="Tic Tac Toe" textFill="#0000BC">
        <font>
          <Font name="Fira Sans Condensed Heavy Italic" size="33.0" />
        </font>
      <graphic>
         <Label fx:id="turnText" contentDisplay="BOTTOM" text="&quot;X Turn&quot;" textFill="#0000fc">
            <font>
               <Font name="Fira Sans Condensed Medium" size="20.0" />
            </font>
         </Label>
      </graphic>
    </Label>
    <StackPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="400.0">
        <AnchorPane fx:id="gamePane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" />
    </StackPane>
    <HBox alignment="CENTER" prefHeight="56.0" prefWidth="260.0" spacing="35.0">
        <Button mnemonicParsing="false" onAction="#resetBtnAction" text="Reset" textFill="white" />
        <Button mnemonicParsing="false" onAction="#quitBtnAction" text="Quit" textFill="white" />
    </HBox>
</VBox>
